{
	"name": "gotmpls",
	"displayName": "gotmpls",
	"description": "a language server for template files",
	"version": "0.0.1",
	"publisher": "walteh",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Programming Languages",
		"Linters"
	],
	"type": "module",
	"activationEvents": [
		"onLanguage:gotmpl"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "gotmpl",
				"extensions": [
					".tmpl",
					".gotmpl",
					".gohtml"
				]
			}
		],
		"configuration": {
			"title": "gotmpls",
			"properties": {
				"gotmpls.executable": {
					"type": "string",
					"default": "gotmpls",
					"description": "Path to the gotmpls executable. Can be absolute or relative to workspace root."
				},
				"gotmpls.trace.server": {
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "traces the communication between VS Code and the language server."
				},
				"gotmpls.diagnostics.enable": {
					"type": "boolean",
					"default": true,
					"description": "Enable/disable diagnostics."
				},
				"gotmpls.hover.enable": {
					"type": "boolean",
					"default": true,
					"description": "Enable/disable hover information."
				},
				"gotmpls.completion.enable": {
					"type": "boolean",
					"default": true,
					"description": "Enable/disable completion suggestions."
				},
				"gotmpls.engine": {
					"type": "string",
					"enum": [
						"cli",
						"wasm",
						"wasi"
					],
					"default": "wasi",
					"description": "The engine to use for the language server"
				}
			}
		}
	},
	"extensionDependencies": [
		"ms-vscode.wasm-wasi-core"
	],
	"scripts": {
		"vscode:prepublish": "bun run build",
		"build": "bun build ./src/extension.ts --outdir ./out --target node --external vscode --format cjs",
		"watch": "bun build ./src/extension.ts --outdir ./out --target node --watch --external vscode --format cjs",
		"package": "bunx vsce package",
		"publish": "bunx vsce publish"
	},
	"devDependencies": {
		"@eslint/js": "^9.20.0",
		"@types/eslint-plugin-security": "^3.0.0",
		"@types/node": "^16.18.34",
		"@types/vscode": "^1.96.0",
		"@typescript-eslint/eslint-plugin": "^8.23.0",
		"@typescript-eslint/parser": "^8.23.0",
		"bun-types": "latest",
		"eslint": "^9.20.0",
		"eslint-import-resolver-typescript": "^3.7.0",
		"eslint-plugin-functional": "^8.0.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-prettier": "^5.2.3",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-unused-imports": "^4.1.4",
		"jiti": "^2.4.2",
		"prettier": "^3.4.2",
		"typescript-eslint": "^8.23.0"
	},
	"trustedDependencies": [
		"bun-types"
	],
	"dependencies": {
		"@vscode/wasm-wasi": "^1.0.1",
		"@vscode/vsce": "latest",
		"vscode-languageclient": "^9.0.1"
	}
}
